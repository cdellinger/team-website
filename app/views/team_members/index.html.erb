<div class="panel1">
<h2><%= @team.name %> - <%= @team.season.name %></h2>
<table class="table">
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Nickname</th>
      <th>Jersey Number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @team_members.each do |team_member| %>
      <tr>
        <td><%= team_member.first_name %></td>
        <td><%= team_member.last_name %></td>
        <td><%= team_member.nickname %></td>
        <td><%= team_member.jersey_number %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'Add Member', new_team_team_member_path %>
</div>
