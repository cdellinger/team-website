  </div>
  <div class="field">
    <%= f.label :location %><br>
    <%= f.text_field :location, :size => 30 %>
  </div>
  <div class="field">
    <%= f.label :map_url %><br>
    <%= f.text_field :map_url, :size => 30 %>
  </div>
  <div class="field">
    <%= f.label :directions %><br>
    <%= f.text_area :directions, :rows => 7, :cols => 30 %>
  </div>
  <div class="field">
    <%= f.label :team_url %><br>
    <%= f.text_field :team_url, :size => 30 %>
  </div>
  <div class="field">
    <%= f.label :is_home_game %><br>
    <%= f.check_box :is_home_game %>
  </div>
  <div class="field">
    <%= f.label :our_score %><br>
    <%= f.number_field :our_score %>
  </div>
  <div class="field">
    <%= f.label :opponent_score %><br>
    <%= f.number_field :opponent_score %>
  </div>
  <div class="field">
    <%= f.label :halftime_snack %><br>
    <%= f.text_field :halftime_snack %>
  </div>
  <div class="field">
    <%= f.label :end_of_game_snack %><br>
